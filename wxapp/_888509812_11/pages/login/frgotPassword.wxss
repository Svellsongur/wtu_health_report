.container {
    height: 100%;
    box-sizing: border-box;
}

.content>.content_text {
    color: #333;
    font-size: 42rpx;
    font-weight: 700;
    margin-bottom: 62rpx;
    border-bottom: none;
}

.content {
    margin-top: 20rpx;
    background-color: #fff;
    padding: 56rpx 62rpx;
    height: 100%;
}

.content>view {
    font-size: 30rpx;
    color: #333;
    margin-top: 76rpx;
    padding-bottom: 20rpx;
    border-bottom: 2rpx solid #eaeaea;
}

.content>view input {
    padding-left: 10rpx;
    text-align: right;
    width: calc(100% - 230rpx);
    float: right;
}

.content>button {
    margin-top: 115rpx;
    line-height: 90rpx;
    height: 90rpx;
    background-color: #0080ef;
    color: #fff;
    border-radius: 46rpx;
}

.content_input>text {
    margin-left: 20rpx;
}

.weui-icon {
    float: left;
    margin-top: 4rpx;
}

.content>view .input_code {
    width: calc(100% - 420rpx);
}

.getCode {
    float: right;
    margin: 0 0 0 20rpx;
    font-size: 30rpx;
    line-height: 50rpx;
    position: relative;
    height: 50rpx;
    top: -4rpx;
    width: 200rpx;
    text-align: center;
    color: #0080ef;
    border: 2rpx solid #438fff;
    padding: 0rpx 20rpx;
    border-radius: 25rpx;
}

.getCode:hover {
    opacity: .7;
}