.login_bg {
    position: absolute;
    width: 100%;
    height: 505rpx;
    top: 0;
    z-index: 0;
}

.container {
    height: 100%;
    box-sizing: border-box;
    padding: 40rpx;
}

.logo {
    width: 335rpx;
    height: 71rpx;
    display: block;
}

.title-img {
    width: 313rpx;
    height: 45rpx;
    margin-top: 68rpx;
    position: relative;
    left: 50%;
    transform: translate(-50%);
}

.logo-text {
    margin-top: 37rpx;
    color: #fff;
    font-size: 34rpx;
    text-align: center;
}

.content {
    padding: 0 40rpx;
    position: absolute;
    width: calc(100% - 80rpx);
    top: 40%;
}

.content>view {
    font-size: 30rpx;
    color: #333;
    margin-top: 40rpx;
    padding-bottom: 20rpx;
    border-bottom: 2px solid #eaeaea;
}

.content>view>input {
    padding-left: 10rpx;
}

.content>button {
    margin-top: 50rpx;
    line-height: 90rpx;
    height: 90rpx;
    background-color: #0080ef;
    color: #fff;
    border-radius: 46rpx;
}

.weui-icon {
    float: left;
}

.content>.set {
    margin-top: 20rpx;
    color: #ccc;
    border-bottom: none;
}

.content>.set checkbox {
    transform: scale(.7);
}

.content>.frgotPassword {
    color: #ccc;
    font-size: 30rpx;
    text-align: center;
    line-height: 90rpx;
    border-bottom: none;
    margin-top: 20rpx;
}

.frgotPassword_text {
    display: inline-block;
    color: #ccc;
    float: right;
}

.privacy {
    text-align: left;
    font-size: 24rpx;
    padding: 0 40rpx;
    color: #000;
    border-bottom: none;
    position: absolute;
    bottom: 60rpx;
}

.get-user-info {
    width: 42rpx;
    height: 42rpx;
    position: absolute;
    background: transparent;
    z-index: 1;
}

.get-user-info:after {
    border: none;
}

.privacy>text {
    color: #3888ff;
    display: inline-block;
}

.privacy>text:hover {
    opacity: .7;
}

.checkbox {
    transform: scale(.7);
}

.tab-login {
    color: #3888ff;
    font-size: 28rpx;
    position: absolute;
    bottom: 160rpx;
    line-height: 40rpx;
    padding: 10rpx;
    text-align: center;
    left: 50%;
    transform: translateX(-50%);
}

.bgWhite {
    width: 100%;
    height: 100%;
    background-color: #fff;
    position: fixed;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 9;
}