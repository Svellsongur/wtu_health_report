.weui-cells:before {
    border-top: none;
}

.weui-cells:after {
    border-bottom: 2rpx solid #ececec;
}

.must-required {
    color: red;
    vertical-align: middle;
    margin-right: 10rpx;
}

.container {
    overflow-y: hidden;
}

.main-nav {
    width: 100%;
    height: 100rpx;
    flex-direction: row;
    background-color: #fff;
    border-bottom: 2rpx solid #ececec;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 999;
}

.main-nav,.nav-item {
    display: flex;
}

.nav-item {
    flex: 1;
    align-items: flex-end;
    justify-content: center;
}

.nav-item text {
    padding: 20rpx;
    font-size: 32rpx;
    color: #666;
    position: relative;
}

.nav-item text:after {
    content: "";
    display: block;
    width: 100%;
    height: 10rpx;
    background-color: transparent;
    border-radius: 6rpx;
    overflow: hidden;
    position: absolute;
    left: 0;
    bottom: 2rpx;
}

.nav-item.active text {
    color: #333;
    font-weight: 700;
}

.nav-item.active text:after {
    background-color: #3888ff;
}

.mc-tooltips {
    width: 100%;
    padding: 32rpx;
    font-size: 28rpx;
    background-color: #e8f2fe;
    color: #438fff;
}

.main-content {
    height: calc(100% - 100rpx);
    margin-top: 100rpx;
    overflow-y: auto;
}

.ban-events {
    pointer-events: none;
}

.mc-top {
    padding: 32rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
}

.mc-top-normal {
    margin-top: 10rpx;
    line-height: 60rpx;
    color: #999;
}

.mc-center {
    margin-top: 16px;
    background-color: #fff;
}

.mcc-inline {
    display: inline-flex;
}

.checkbox-group,.radio-group {
    margin-top: 20rpx;
}

.checkbox-group .checkbox,.radio-group .radio {
    transform: scale(.9);
    transform-origin: 0 0;
    padding-top: 16px;
    padding-right: 16px;
    display: inline-block;
    color: #666;
    font-size: 18px;
}

.mc-title {
    position: relative;
}

.mc-map-refresh {
    position: absolute;
    right: 0;
    color: #3888ff;
}

.map-container {
    width: 100%;
    height: 200px;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    position: relative;
}

.map-container map {
    width: 100%;
    height: 100%;
    position: absolute;
    left: 0;
    right: 0;
    z-index: 0;
}

.map-position-name {
    font-size: 11pt;
    color: #666;
}

.main-content-record {
    background-color: #fff;
    position: relative;
}

.mc-item {
    position: relative;
    padding: 56rpx 32rpx;
    border-bottom: 2rpx solid #ececec;
}

.mi-row {
    display: flex;
    align-items: center;
}

.mi-time {
    color: #999;
    flex: 1;
    text-align: right;
}

.mc-tips {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 400rpx;
    padding-top: 20rpx;
    color: #666;
    font-size: 28rpx;
    text-align: center;
    white-space: pre-wrap;
}

.mc-foot {
    padding: 32rpx;
}

.btn-confirm {
    background-color: #438fff;
    border-top: 2rpx solid #438fff;
    color: #fff;
    border-radius: 23px;
}

.btn-confirm-hover {
    opacity: .8;
}

.msg-box {
    padding: 0 125rpx;
}

.msg-box .icon {
    text-align: center;
}

.msg-box .weui-icon {
    margin-top: 83rpx;
    margin-bottom: 62rpx;
}

.msg-box .msg {
    text-align: center;
    font-size: 32rpx;
    color: #999;
    margin-top: 36rpx;
    margin-bottom: 83rpx;
}

.msg-box .type {
    text-align: center;
    font-size: 40rpx;
    color: #333;
}

.success {
    color: #0fbd84;
}

.error {
    color: #ec4e4e;
}

.yellow {
    color: orange;
}