<view class="container">
    <textarea bindinput="limit" maxlength="300" name="introduction" placeholder="请输入审批意见" placeholderClass="place-holder" style="font-size: 28rpx;" value="{{opinion}}"></textarea>
    <view class="deal">
        <view>
            <checkbox-group bindchange="checkboxChange" class="checkbox-group">
                <checkbox class="checkbox" value="1">
                    <text>审批意见通过聊天转发给</text>
                    <text class="user">{{baseInfo.xm}}</text>
                </checkbox>
            </checkbox-group>
        </view>
        <button bindtap="funcSumbit" class="submit">确认{{baseInfo.type}}</button>
    </view>
</view>
