}

.mcj-common {
    position: relative;
    width: 100%;
    display: inline-flex;
    flex-direction: row;
    padding: 16px;
}

.mcj-tx {
    width: 60px;
    height: 60px;
    margin-right: 16px;
    border-radius: 50%;
    background-color: #f3f3f3;
    border: 1px solid #f3f3f3;
}

.mcj-xm {
    font-size: 32rpx;
